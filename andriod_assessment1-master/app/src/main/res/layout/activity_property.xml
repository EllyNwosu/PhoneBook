<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".models.PropertyActivity"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/imageAnimal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bat" />

    <TextView
        android:id="@+id/textfirstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="FirstName"
        app:layout_constraintStart_toEndOf="@+id/imageAnimal"
        app:layout_constraintTop_toTopOf="@+id/imageAnimal" />

    <TextView
        android:id="@+id/textsurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:text="Surname"
        app:layout_constraintStart_toEndOf="@+id/imageAnimal"
        app:layout_constraintTop_toBottomOf="@+id/textfirstname" />
</androidx.constraintlayout.widget.ConstraintLayout>